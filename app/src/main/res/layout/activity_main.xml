<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.game_project.MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="75sp"
        android:layout_marginTop="16sp"
        android:fontFamily="casual"
        android:text="@string/gameTitle1"
        android:textColor="@android:color/holo_red_light"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="75sp"
        android:fontFamily="casual"
        android:text="@string/gameTitle2"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="200sp"
        android:layout_height="75sp"
        android:layout_marginTop="8sp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:fontFamily="casual"
        android:text="@string/start"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="175sp"
        android:layout_height="50sp"
        android:layout_marginTop="8sp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:fontFamily="casual"
        android:text="@string/settings"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startButton" />

    <Button
        android:id="@+id/leaderboardsButton"
        android:layout_width="175sp"
        android:layout_height="49sp"
        android:layout_marginTop="8sp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:fontFamily="casual"
        android:text="@string/leaderboards"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsButton" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="75sp"
        android:fontFamily="casual"
        android:text="@string/gameTitle3"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/quitButton"
        android:layout_width="175sp"
        android:layout_height="50sp"
        android:layout_marginEnd="8sp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="8sp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:fontFamily="casual"
        android:text="@string/quit"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leaderboardsButton" />

</android.support.constraint.ConstraintLayout>
